<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyApplication" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/teal_200</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <item name="materialButtonStyle">@style/CalcButton</item>
        <item name="operatorButtonColor">#474747</item>
        <item name="operatorButtonTextColor">#FFFFFF</item>

    </style>

    <style name="Theme.MyApplication.Green" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#445E25</item>
        <item name="colorPrimaryVariant">#8BC34A</item>
        <item name="colorOnPrimary">#A1C17C</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#8BC34A</item>
        <item name="colorSecondaryVariant">#4CAF50</item>
        <item name="colorOnSecondary">#153216</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <item name="materialButtonStyle">@style/CalcButton.Green</item>

        <item name="operatorButtonColorGreen">#2C592E</item>
        <item name="operatorButtonTextColorGreen">#6AF16F</item>

    </style>



</resources>